#
# Main arguments, all optional
#
title: FRIS - Cameras
widget_dimensions: [110, 110]
widget_margins: [3, 3]
columns: 9
global_parameters:
    use_comma: 0
    precision: 1
    use_hass_icon: 1
    
tablet:
    title: FRIS
    icon_inactive: mdi-home-assistant
    widget_type: navigate
    widget_style: "background: #006437"
    dashboard: Tablet

frente:
  widget_type: camera
  title: Frente
  refresh: 1
  entity_picture: 
    - !secret camera_frente

interna:
  widget_type: camera
  title: Interna
  refresh: 1
  entity_picture: 
    - !secret camera_interna

fundos:
  widget_type: camera
  title: Fundos
  refresh: 1
  entity_picture: 
    - !secret camera_fundos

portao:
  widget_type: switch
  title: Port√£o
  entity: switch.portao
  icon_on: mdi-gate
  icon_off: mdi-gate
  
layout:
    - include: TitleT
    - tablet, portao
    - frente (3x2), interna (3x2), fundos (3x2)
